{
  "name": "commonsku-api",
  "version": "1.0.0",
  "description": "commonsku API",
  "main": "",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest",
    "watch-test": "jest --watch",
    "test-cov": "npm run test -- --coverage"
  },
  "author": "commonsku",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "@types/koa-compose": "^3.2.2",
    "ajv": "^6.1.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "lodash": "^4.17.4",
    "mysql": "^2.15.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.1.14",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa__cors": "^2.2.2",
    "@types/lodash": "^4.14.96",
    "@types/node": "^9.3.0",
    "jest": "^22.1.4",
    "sqlite3": "^3.1.13",
    "ts-jest": "^22.0.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$"
  }
}
